                            <![CDATA[
                            parent.parent.parent.parent.parent.parent.calgrid.keepinfoopen = true;
                            var thiscell = parent.parent.parent.parent.parent.parent.calgrid.open_day.id;
                            thiscell = Number(thiscell.substr(4));
                            
