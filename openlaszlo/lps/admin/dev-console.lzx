  <method name="deploySOLO">
    <![CDATA[
     var path = escape(app_fullpath.substring(app_lps_root.length));
     if (app_runtime == 'dhtml') {
        var url = app_lps_root + "/lps/admin/solo-dhtml-deploy.jsp?appurl="+path;
     } else {
        var url = app_lps_root + "/lps/admin/solo-deploy.jsp?appurl="+path+"&runtime="+app_runtime;
     }

     this.loadURL(url, '_blank');
     ]]>
  </method>

  <!-- generates an exploded widget file to tmp working dir, and redirects to it's config.xml -->
  <method name="runWidget">
    <![CDATA[
     var path = escape(app_fullpath.substring(app_lps_root.length));
     if (app_runtime == 'dhtml') {
        var url = app_lps_root + "/lps/admin/solo-dhtml-deploy.jsp?appurl="+path+"&whatpage=emulator";
     } else {
        var url = app_lps_root + "/lps/admin/solo-deploy.jsp?appurl="+path+"&runtime="+app_runtime+"&whatpage=emulator";
     }

     this.loadURL(url, '_blank');
     ]]>
  </method>



