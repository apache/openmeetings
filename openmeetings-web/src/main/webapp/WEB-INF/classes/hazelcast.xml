			</multicast>
		</join>
		<interfaces enabled="true">
			<interface>192.168.1.*</interface>
		</interfaces>
	</network-->
	<properties>
		<property name="hazelcast.logging.type">slf4j</property>
		<property name="hazelcast.discovery.enabled">false</property>
	</properties>
</hazelcast>
