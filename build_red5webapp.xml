    </target>
	
	<!-- compiles the sources only with laszlo debug client -->
	<target name="dist-debug" description="binary distribution of OpenMeetings"
        depends="cleanForBinary, jar, compile.laszlo.main.debug, signWebStartJars">
        
    </target>

